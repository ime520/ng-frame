.header
    position fixed
    top 0
    height 60px
    padding 0 200px
    display flex
    justify-content space-between
    color #fff
    background #1a1a1a
    box-shadow: 0 1px 4px 0 #e5e5e5;
    .logo
        cursor pointer
    .menu-list
        margin 0
        padding 0
        display flex
        .menu
            margin-right 80px
            list-style none
            font-size 14px
            cursor pointer
            &:hover
                color #e99345
    &-login
      background-color #fff
      color #111
      border-radius 0
    &-user
        display flex
        &-logout
            margin-left 20px
            cursor pointer
.content
  padding-top 60px
  width 1200px
  margin 0 auto
